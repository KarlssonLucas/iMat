<fx:root fx:id="productItem" onMouseClicked="#onClick" prefHeight="143.0" prefWidth="259.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
