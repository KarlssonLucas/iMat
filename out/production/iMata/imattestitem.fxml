            <Image url="@resources/chicken-tikka-masala.jpg" />
         </image>
      </ImageView>
      <Label fx:id="productName" layoutX="42.0" layoutY="14.0" text="Stekt ägg" textAlignment="CENTER" />
      <Label fx:id="productPrice" layoutX="165.0" layoutY="14.0" text="Label" />
      <Button fx:id="addProduct" layoutX="135.0" layoutY="93.0" mnemonicParsing="false" onAction="#addCart" prefHeight="25.0" prefWidth="120.0" text="Lägg till i kundvagn" />
